# Supabase Configuration
# Copy this file to .env.local and fill in your actual values
# Get your credentials from: https://supabase.com/dashboard/project/YOUR_PROJECT/settings/api

# Public Supabase URL (required for client-side operations)
# Format: https://YOUR_PROJECT_REF.supabase.co
NEXT_PUBLIC_SUPABASE_URL=https://YOUR_PROJECT_REF.supabase.co

# Public Supabase Anon Key (required for client-side operations)
# This is safe to expose in client-side code
# Get from: Supabase Dashboard > Settings > API > anon public key
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_anon_key_here

# Server-side Supabase Configuration (optional, for server-side operations)
# Usually same as NEXT_PUBLIC values, but can be different for server-side usage
SUPABASE_URL=https://YOUR_PROJECT_REF.supabase.co
SUPABASE_ANON_KEY=your_anon_key_here

# Supabase JWT Secret (for server-side JWT verification)
# Get from: Supabase Dashboard > Settings > API > JWT Secret
# âš ï¸ KEEP SECRET - Never commit this to git
SUPABASE_JWT_SECRET=your_jwt_secret_here

# Supabase Service Role Key (for admin operations)
# Get from: Supabase Dashboard > Settings > API > service_role key
# âš ï¸ KEEP SECRET - Never expose to client-side code
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here

# PostgreSQL Database Configuration (optional, for direct database access)
# Get from: Supabase Dashboard > Settings > Database > Connection string
POSTGRES_HOST=db.YOUR_PROJECT_REF.supabase.co
POSTGRES_DATABASE=postgres
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_database_password_here

# PostgreSQL Connection Strings (optional)
# Get from: Supabase Dashboard > Settings > Database
# - Connection string (pooling)
POSTGRES_URL=postgresql://postgres:[YOUR-PASSWORD]@db.YOUR_PROJECT_REF.supabase.co:5432/postgres?pgbouncer=true

# - Connection string (non-pooling, for migrations)
POSTGRES_URL_NON_POOLING=postgresql://postgres:[YOUR-PASSWORD]@db.YOUR_PROJECT_REF.supabase.co:5432/postgres

# - Prisma connection string (if using Prisma)
POSTGRES_PRISMA_URL=postgresql://postgres:[YOUR-PASSWORD]@db.YOUR_PROJECT_REF.supabase.co:5432/postgres?pgbouncer=true&connect_timeout=15
